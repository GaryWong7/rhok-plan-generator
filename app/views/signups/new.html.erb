<div class="jumbotron top">
  <div class="container">
    <h3>Let's get started!</h3>
  </div>
</div>

<div class="container">
  <%= form_tag signups_path, method: :post do %>
    <div class="row">
      <div class="span12">
      <p></p>
      </div>
      <div class="span12">
        <p>All we need is a plan name and your postcode (so we can help find plan templates that you may find useful)</p>
      </div>
    </div>

    <div class="row">
      <div class="span8">
        <fieldset>
          <%= text_field_tag "plan_name", nil, placeholder: "Plan Name", class: 'large-element' %>
          <%= text_field_tag "postcode", nil, placeholder: "Household Postcode", class: 'large-element' %>
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <h4>Optional details</h4>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <fieldset>
          <%= text_field_tag "name", nil, placeholder: "Name or Nickname", class: 'large-element' %>
          <%= email_field_tag "email", nil, placeholder: "Email", class: 'large-element' %>
          <%= text_field_tag "mobile", nil, placeholder: "Mobile", class: 'large-element' %>
        </fieldset>
      </div>
    </div>

    <div class='row'>
      <div class="span12">
        <fieldset>
            <%= check_box_tag :opt_out, 'yes', true %> Keep your plan private?
        </fieldset>
      </div>
    </div>

    <div class='row'>
      <div class="span12">
        <fieldset>
            <%= check_box_tag :alone %> Do you live alone?
        </fieldset>
      </div>
    </div>
    <div class='row'>
      <div class="span12">
        <fieldset>
            <%= check_box_tag :pets %> Do you have pets?
        </fieldset>
      </div>
    </div>

    <div class="row">
      <div class="span2">
        <p>
        <p><%= submit_tag "Next >>", class: "btn btn-default" %></p>
      </div>
    </div>
  <% end %>
</div>