<div>
  <h3><%= @plan.name %></h3>
  <h4>Postcode: <%= @plan.postcode %></h4>
</div>

<div>
  <%= button_to 'COPY!', plan_duplicate_url(:public_guid => @plan.public_guid), method: :post %>
</div>

</div>

  <% @plan.events.each do |event| %>
            
    <h3><%= event.name %></h3>
            
    <table>
      <% @plan.tasks_for(event).each do |task| %>
        <tr>
          <td><%= @plan.people_for(task) %></td>
          <td><%= task.name %></td>
        </tr>      
      <% end %>
    </table>

  <% end %>

</div>
