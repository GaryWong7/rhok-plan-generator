<div class="jumbotron top">
  <div class="container">
    <h3><%= @plan.name %></h3>
    <h4>Postcode: <%= @plan.postcode %></h4>
  </div>
</div>

<div class="jumbotron second">
  <div class="container">

    <%= button_to 'COPY!',
      plan_duplicate_url(:public_guid => @plan.public_guid),
      class: "btn btn-success", method: :post %>

  </div>
</div>


<div class="container">
  <div class="row">
    <div class="span12">

        <% @plan.events.each do |event| %>
          
          <h3><%= event.name %></h3>
          
          <table class="table table-striped">
            <% @plan.tasks_for(event).each do |task| %>
              <tr>
                <td><%= @plan.people_for(task) %></td>
                <td><%= task.name %></td>
              </tr>      
            <% end %>
          </table>
        <% end %>

    </div>
  </div>
</div>
