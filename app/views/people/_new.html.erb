<%= form_tag people_path, method: :post do %>
  <div class="span12">
    <h2>Start by naming your team</h2>
    <p>You will need your team member emails and mobile numbers to successfully complete your plan of attack!</p><br><br>

    <fieldset>
      <p class="subHeadings"><strong>Team</strong></p>
      <input type="text" placeholder="Name"> <input type="text" placeholder="Postcode">

    </fieldset>
    <br>
    <br>
    <p class="subHeadings">Members</p>
  </div>

  <% @persons.each_with_index do |p, i| %>
    <div class="span3">
      <p><strong> <%= i+1 %></strong></p>
      <fieldset>
        <%= text_field_tag 'p_names[]', p.name,  placeholder: 'Name or Nick name' %>
        <%= email_field_tag 'p_emails[]', p.email, placeholder: 'Email' %>
        <%= text_field_tag 'p_mobiles[]', p.mobile, placeholder: 'Mobile' %>
        <br>
      </fieldset>
    </div>
  <% end %>

  <div class="span10">
    <button type="submit" class="btn">+ Add more players</button>
  </div>
  <div class="span2">
    <p><%= submit_tag "Next >>", class: "btn btn-primary" %></p>
  </div>

<% end %>
