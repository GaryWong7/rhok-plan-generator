<div class='container'>
  <div class="navbar">
    <div class="navbar-inner">
      <ul id="events" class="nav">
        <% for e in @events %>
          <li class="event <%= 'active' if e == @event %>" data-id="<%= e.id %>">
            <%= link_to e.name, allocations_path(:id => e.id) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class='container'>
  <ul id="allocations">
    <% for allocation in @allocations %>
      <li>
        <span class="dnd-node" data-id="<%= allocation.id %>"><%= allocation.person_id %><-><%= allocation.task_id %></span>
      </li>
    <% end %>
  </ul>
</div>

<div class='container'>
  <ul id="people">
    <% for person in @people %>
      <li>
        <span class="dnd-node" data-id="<%= person.id %>"><%= person.name.capitalize %> (<%= person.email %>, <%= person.mobile %>)</span>
      </li>
    <% end %>
  </ul>
</div>

<div class='container'>
  <ul id="tasks">
    <% for task in @tasks %>
      <li>
        <span class="dnd-node" draggable='true' data-id="<%= task.id %>"><%= task.name[0..50] %></span>
      </li>
    <% end %>
  </ul>
</div>