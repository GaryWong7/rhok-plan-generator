<section class='headline'>
  <div class='row'>
    <div class='small-6 columns'>
      <!-- 'edit' is for inline editing, 'has-tip' for foundation -->
      <h1 data-tooltip class='edit has-tip' id='name' title='Click to edit...' data-options="disable-for-touch:true"><%= @plan.name %></h1>
    </div>
    <div class='small-6 columns'></div>
  </div>
  <div class='row'>
    <div class='small-2 columns' id='postcode'>
      <h2>Postcode:</h2>
    </div>
    <div class='small-2 columns'>
      <h2 data-tooltip class='edit has-tip' id='postcode' title='Click to edit...' data-options="disable-for-touch:true"><%= @plan.postcode %></h2>
    </div>
    <div class='small-8 columns'></div>
  </div>
</section>

<section class='secondary'>
  <div class='row'>
    <div class='small-12 columns'>
      <nav>
        <ul id="events" class='inline-list'>
          <% for e in @events %>
            <li class="<%= 'active' if e == @event %>" data-id="<%= e.id %>">
              <%= link_to e.name.upcase, plan_allocations_url(:private_guid => @plan.private_guid, :id => e.id) %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</section>

<!-- using only one person for now -->
<span class='hidden' id='person-id' data-id="<%= @people.first.id %>"></span>
<span class='hidden' id='private-guid' data-id="<%= @plan.private_guid %>"></span>

<section class='main-page'>
  <div class='row'>
    <div class='small-12 large-6 columns'>
        <h3>YOUR LIST</h3>
        <ul id='allocations'>
          <% for a in @people.first.allocations.where(task_id: @custom_tasks) %>
            <li class='allocation' data-id="<%= a.id %>"><%= a.task.name %></li>
          <% end %>
          <li class='add edit' id='add'>Add item</li>
        </ul>
    </div>

  <!-- <div class="row"> -->
    <div class='small-12 large-6 columns'>
      <h3>SUGGESTED LIST</h3>
      <ul id="tasks">
        <% for task in @public_tasks %>
          <li class="suggested" data-id="<%= task.id %>"><%= task.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</section>

<section>
  <div class='row'>
    <div class='small-12 columns'>
      <%= button_to 'PDF', plan_download_url(:private_guid => @plan.private_guid, :format => :pdf), method: :get, class: 'button' %>
    </div>
  </div>
</section>