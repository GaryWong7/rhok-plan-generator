<div class='container'>
  <div class="navbar">
    <div class="navbar-inner">
      <ul id="events" class="nav">
        <% for e in @events %>
          <li class="<%= 'active' if e == @event %>" data-id="<%= e.id %>">
            <%= link_to e.name, allocations_path(:id => e.id) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class='container'>
  <ul id="people">
    <% for person in @people %>
      <li data-id="<%= person.id %>">
        <span class="dnd-node person"><%= person.name.capitalize %> (<%= person.email %>, <%= person.mobile %>)</span>
        <ul class='allocations'>
          <% for a in  person.allocations.where(task_id: @tasks) %>
            <li class='allocation' >
              <span class='allocation' data-id="<%= a.id %>"><%= a.task.name[0...40] %></span>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>

<div class='container'>
  <ul id="tasks">
    <% for task in @tasks %>
      <li>
        <span class="dnd-node" draggable='true' data-id="<%= task.id %>"><%= task.name[0...40] %></span>
      </li>
    <% end %>
  </ul>
</div>